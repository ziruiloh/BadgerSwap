rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: users can read/write their own data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Products collection: anyone can read, authenticated users can create/update/delete their own
    match /products/{productId} {
      allow read: if true; // Anyone can read products
      allow create: if request.auth != null; // Authenticated users can create
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.sellerId || 
         request.auth.uid == request.resource.data.sellerId);
    }
    
    // Conversations collection: users can read/write conversations they're part of
    match /conversations/{conversationId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.buyerId || 
         request.auth.uid == resource.data.sellerId);
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.buyerId || 
         request.auth.uid == resource.data.sellerId);
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if request.auth != null && 
          (request.auth.uid == get(/databases/$(database)/documents/conversations/$(conversationId)).data.buyerId ||
           request.auth.uid == get(/databases/$(database)/documents/conversations/$(conversationId)).data.sellerId);
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.senderId;
      }
    }
    
    // Reports collection: authenticated users can create reports, only admins can read
    match /reports/{reportId} {
      allow create: if request.auth != null; // Any authenticated user can create reports
      allow read: if false; // Only admins should read (you can add admin check later)
      allow update, delete: if false; // No updates/deletes for now
    }
  }
}


