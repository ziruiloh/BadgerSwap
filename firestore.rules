rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: users can read/write their own data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Products collection: anyone can read, authenticated users can create/update/delete their own
    match /products/{productId} {
      allow read: if true; // Anyone can read products
      allow create: if request.auth != null; // Authenticated users can create
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.sellerId || 
         request.auth.uid == request.resource.data.sellerId);
    }
    
    // Conversations collection: users can read/write conversations they're part of
    match /conversations/{conversationId} {
      allow read, write: if true;
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if true;
      }
    }
    
    // Reports collection: authenticated users can create and read their own reports
    match /reports/{reportId} {
      // Any authenticated user can create reports
      allow create: if request.auth != null;
      // Users can read their own reports (by reporterId)
      allow read: if request.auth != null && 
        (resource.data.reporterId == request.auth.uid);
      // Updates and deletes restricted (add admin check here if needed)
      // Example admin check: request.auth.token.admin == true
      allow update, delete: if false;
    }
  }
}